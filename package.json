{
  "name": "todo-list-application",
  "version": "1.0.0",
  "description": "simple todo list application for daily use",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "build-client": "npm install --prefix view && npm run build --prefix view",
    "client": "npm start --prefix view",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
